<div class="section-ranking">
    <div class="row">
        <div class="col-4 rightdottedscore">
            <h4 class="text-center">{{ name }}</h4>
            {{#parameters.gamified}}
                {{#parameters.noscore}}
                    <img class="ludimoodle-img img-responsive d-block mx-auto" src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/none.svg" alt="Image no score">
                {{/parameters.noscore}}
                {{^parameters.noscore}}
                    {{#school}}
                        {{> format_ludimoodle/ranking/school/summary}}
                    {{/school}}
                    {{#professional}}
                        {{> format_ludimoodle/ranking/professional/summary}}
                    {{/professional}}
                    {{#highschool}}
                        {{> format_ludimoodle/ranking/highschool/summary}}
                    {{/highschool}}
                    {{> format_ludimoodle/ranking/rankingtable}}
                {{/parameters.noscore}}
            {{/parameters.gamified}}
            {{^parameters.gamified}}
                <img class="ludimoodle-img img-responsive d-block mx-auto" src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/none.svg" alt="Image not gamified">
            {{/parameters.gamified}}
        </div>
        <div class="col-8">
            <div class="row">
                {{#cms}}
                    <div class="col-6 col-sm-4 col-md-4 col-lg-4">
                        <div class="cm-score">
                            <a href="{{ url }}" class="{{#parameters.restricted }}restricted{{/parameters.restricted}} {{^url}} nourl {{/url}}">
                                {{#parameters.gamified}}
                                    {{#parameters.noscore}}
                                        <img class="ludimoodle-img img-responsive d-block mx-auto" src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/none.svg" alt="Image no score">
                                    {{/parameters.noscore}}
                                    {{^parameters.noscore}}
                                        {{#school}}
                                            {{> format_ludimoodle/ranking/school/summary}}
                                        {{/school}}
                                        {{#professional}}
                                            {{> format_ludimoodle/ranking/professional/summary}}
                                        {{/professional}}
                                        {{#highschool}}
                                            {{> format_ludimoodle/ranking/highschool/summary}}
                                        {{/highschool}}
                                    {{/parameters.noscore}}
                                {{/parameters.gamified}}
                                {{^parameters.gamified}}
                                    <img class="ludimoodle-img img-responsive d-block mx-auto" src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/none.svg" alt="Image not gamified">
                                {{/parameters.gamified}}
                                <p class="text-center scoretext">
                                    {{#parameters.gamified}}
                                        {{^parameters.noscore}}<span>{{ parameters.score }} pts</span>{{/parameters.noscore}}<br>
                                    {{/parameters.gamified}}
                                    <span class="cmname">{{ name }}</span>
                                </p>
                                {{#parameters.restricted }}
                                    <div class="cmrestrictedinfo text-center small"><i class="fa fa-lock"></i> {{{ parameters.restrictedinfo }}}</div>
                                {{/parameters.restricted }}
                            </a>
                        </div>
                    </div>
                {{/cms}}
            </div>
        </div>
    </div>
</div>